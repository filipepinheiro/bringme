<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="paddingStyles">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">15dp</item>
    </style>
    <style name="editTextStyle" parent="android:Widget.Holo.EditText">
        <item name="android:background">@drawable/edit_txt_bringme</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:inputType">textWebEmailAddress</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="buttonStyle" parent="android:Widget.Holo.Button">
        <item name="android:background">@drawable/btn</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="menuIconButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@color/transparent</item>
        <item name="android:drawableTop">@drawable/request_delivery_icon</item>
        <item name="android:focusable">false</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="mapSearchFieldStyle" parent="android:Widget.Holo.EditText">
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">@color/transparent</item>
        <item name="android:textColor">#1b1a19</item>
        <item name="android:textColorHint">#1b1a19</item>
        <item name="android:drawableLeft">@drawable/abc_ic_search_api_holo_light</item>
    </style>
</resources>
